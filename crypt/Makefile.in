#
# Change this to the path of your local ircd.conf file
#

IRCDCONF = ../ircd.conf
LIBS=@MKPASSWDLIBS@

all: mkpasswd
crypt: install

mkpasswd: mkpasswd.c
	cc ${LIBS} -O mkpasswd.c -o mkpasswd

install:
	chmod 700 crypter
	./crypter ${IRCDCONF}
	@echo 'done.'

clean:
	/bin/rm -f mkpasswd
